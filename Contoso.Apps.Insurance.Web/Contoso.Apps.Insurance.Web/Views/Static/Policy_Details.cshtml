@{
    Layout = null;
}
    <h2>Policy Details</h2>
        <div class="form-horizontal">
            <ul id="validationSummary"></ul>
            <div class="form-group">
                <label for="PolicyHolders" class = "control-label col-md-2">
                 Policy Holders
                </label>
                <div class="col-md-10">
                    <a ng-href="#PolicyHolder?Policy={{data.Id }}" >
                    {{data.PolicyHolders_Count}}
                    </a>
                </div>
            </div>
    
            <div class="form-group">
                <label for="Name" class = "control-label col-md-2">
                Name
                </label>
                <div class="col-md-10">
                    {{data.Name}}
                </div>
            </div>
    
            <div class="form-group">
                <label for="Description" class = "control-label col-md-2">
                Description
                </label>
                <div class="col-md-10">
                    {{data.Description}}
                </div>
            </div>
    
            <div class="form-group">
                <label for="DefaultDeductible" class = "control-label col-md-2">
                Default Deductible
                </label>
                <div class="col-md-10">
                    {{data.DefaultDeductible | currency}}
                </div>
            </div>
    
            <div class="form-group">
                <label for="DefaultOutOfPocketMax" class = "control-label col-md-2">
                Default Out of Pocket Max
                </label>
                <div class="col-md-10">
                    {{data.DefaultOutOfPocketMax | currency}}
                </div>
            </div>
    
           
        </div>
    
    <div>
        <a href="#/Policy">Back to List</a>
    </div>
