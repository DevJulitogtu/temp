@{
    Layout = null;
}
    <h2>Dependent</h2>
    <form name="theForm">
        <div class="form-horizontal">
            <ul id="validationSummary"></ul>
            <div class="form-group">
                <label for="PersonId" class = "control-label col-md-2"> Person </label>
                <div class="col-md-10">
                    <select ng-model="data.PersonId" id="PersonId"  class="form-control"
                            ng-options="option.Id as option.DisplayName for option in PersonId_options">
                        <option value="">-- choose Person --</option>
                    </select>
                    <div id="validation_for_PersonId"></div>
                </div>
            </div>
    
            <div class="form-group">
                <label for="PolicyHolderId" class = "control-label col-md-2"> Policy # </label>
                <div class="col-md-10">
                    <select ng-model="data.PolicyHolderId" id="PolicyHolderId"  class="form-control"
                            ng-options="option.Id as option.PolicyNumber for option in PolicyHolderId_options">
                        <option value="">-- choose PolicyHolder --</option>
                    </select>
                    <div id="validation_for_PolicyHolderId"></div>
                </div>
            </div>
    
            <div class="form-group">
                <label for="Active" class = "control-label col-md-2"> Active </label>
                <div class="col-md-10">
                    <input type="checkbox" ng-model="data.Active" id="Active"  class="form-control"/>
                    <div id="validation_for_Active"></div>
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="button" value="Save" class="btn btn-default" ng-click="save()" />
                </div>
            </div>
        </div>
    </form>
    
